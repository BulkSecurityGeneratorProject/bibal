<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Oeuvre.
    -->
    <changeSet id="20161012101627-1" author="jhipster">
        <createTable tableName="oeuvre">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="titre" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="editeur" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="description" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="data_publication" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="date_edition" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="numero" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="parution" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="periodicite" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="est_livre" type="bit">
                <constraints nullable="false" />
            </column>
            
            <column name="exemplaire_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="reservation_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="oeuvre" columnName="data_publication" columnDataType="datetime"/>
        <dropDefaultValue tableName="oeuvre" columnName="date_edition" columnDataType="datetime"/>
        <dropDefaultValue tableName="oeuvre" columnName="parution" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
